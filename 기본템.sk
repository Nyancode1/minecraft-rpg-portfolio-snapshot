#플레이어가 처음 들어왔을 때 메세지
on first join:
	set join message to "&e%player%&a님 서버에 오신 것을 환영합니다!"
	set {직업.%player%} to "초보자"
	set {결.%player%} to  true
	set {수표개수.%player%} to true
	set {들어감.%player%} to false
	set {출입 변수.%player%} to true
	set {출입 변수1.%player%} to true
	set {출입 변수2.%player%} to true
	set {출입 변수3.%player%} to true
	set {초 세기.%player%} to 3.0
	set {강화횟수.%player%} to 0
	delete {나무등급업.%player%}
	delete {돌등급업.%player%}
	delete {철등급업.%player%}
	delete {다이아등급업.%player%}
	delete {대검차징.%player%}
	set {튜토완.%player%} to false
	set {튜토완1.%player%} to false
	set {튜토대화.%player%} to false
	delete {튜토대화1.%player%}
	delete {튜토대화2.%player%}
	delete {튜토대화3.%player%}
	delete {닉넴.%player%}
	delete {이동.%player%}
	delete {이동x.%player%}
	delete {move.%player%}
	set {안가.%player%} to 0
#서버 접속 메세지
on join:
	set title of player's scoreboard to "&6&l내 정보"
	set {결.%uuid of player%} to true
	set {내 정보.%player%} to true
	set {들어감.%player%} to false
	set {출입 변수.%player%} to true
	set {출입 변수1.%player%} to true
	set {출입 변수2.%player%} to true
	set {출입 변수3.%player%} to true
	set {초 세기.%player%} to 3.0
	set {강화횟수.%player%} to 0
	delete {나무등급업.%player%}
	delete {돌등급업.%player%}
	delete {철등급업.%player%}
	delete {다이아등급업.%player%}
	delete {대검차징.%player%}
	if player is op:
		set join message to ""
	else:
		set join message to "&e%player%&a님이 서버에 들어왔습니다."
#서버 퇴장 메세지
on quit:
	if player is op:
		set quit message to ""
	else:
		set quit message to "&e%player%&c님이 서버에서 나갔습니다."
		
on script load:
	set {결.%uuid of all players%} to  true
	set {내 정보.%all players%} to true
	set {들어감.%all players%} to false
	set {출입 변수.%all players%} to true
	set {출입 변수1.%all players%} to true
	set {출입 변수2.%all players%} to true
	set {출입 변수3.%all players%} to true
	set {초 세기.%all players%} to 3.0
	set {강화횟수.%all players%} to 0
	delete {나무등급업.%all players%}
	delete {돌등급업.%all players%}
	delete {철등급업.%all players%}
	delete {다이아등급업.%all players%}
	set {튜토완.%all players%} to false
	set {튜토완1.%all players%} to false
	set {튜토대화.%all players%} to false
	delete {튜토대화1.%all players%}
	delete {튜토대화2.%all players%}
	delete {튜토대화3.%all players%}
	delete {닉넴.%all players%}
	delete {이동.%all players%}
	delete {이동x.%all players%}
	delete {move.%all players%}
	set {안가.%all players%} to 0


variables:
	{내 정보.%player%} = true
	{들어감.%player%} = false
	{출입 변수.%player%} = true
	{출입 변수1.%player%} = true
	{출입 변수2.%player%} = true
	{초 세기.%player%} = 3.0
	
on death:
	if {직업.%victim%} is "초보자":
		clear drops
		keep the inventory
		
command /공지 [<string>]:
	permission: 어드민
	trigger:
		if arg-1 is not set:
			send "공지를 써주세요" to player
		else:
			send "&b&l<공지> &f%arg-1%" to all players
			play sound "item_goat_horn_sound_1" with volume 1 and pitch 2 to all players
	
command /내정보끄기:
	permission: 유저
	trigger:
		set {내 정보.%player%} to false

command /내정보켜기:
	permission: 유저
	trigger:
		set {내 정보.%player%} to true

every 1 second:
	loop all players:
		if {내 정보.%loop-player%} is true:
			set line 7 of loop-player's scoreboard to "&9======================"
			set line 6 of loop-player's scoreboard to "&d&l직업 &f&l: &e&l[&a&l%{직업.%loop-player%}%&e&l]"
			set line 5 of loop-player's scoreboard to "&a&l닉네임 &f&l: &e&l%loop-player%"
			set line 4 of loop-player's scoreboard to "&6&l소지금 &f&l: &e&l%{돈.%uuid of loop-player%}%&6&l원"
			set line 3 of loop-player's scoreboard to "&c&l현상금 &f&l: &e&l%{현상금.%loop-player%}%&6&l원"
			set line 2 of loop-player's scoreboard to "&7&l현재시각 &7%now%"
			set line 1 of loop-player's scoreboard to "&9======================"
			wait 1 ticks
		else if {내 정보.%loop-player%} is false:
			delete line 7 of loop-player's scoreboard
			delete line 6 of loop-player's scoreboard
			delete line 5 of loop-player's scoreboard
			delete line 4 of loop-player's scoreboard
			delete line 3 of loop-player's scoreboard
			delete line 2 of loop-player's scoreboard
			delete line 1 of loop-player's scoreboard

on enter "spawn":
	play sound "entity_experience_orb_pickup" with volume 0.4 and pitch 2 at player
	send "&a&l이곳은 스폰지역입니다! pvp가 불가능하고 데미지를 받지 않습니다!" to player
	
on exit "spawn":
	play sound "entity_experience_orb_pickup" with volume 0.4 and pitch 2 at player
	send "&c&l이곳은 야생지역입니다! pvp가 가능하고 데미지를 받습니다!" to player
	
